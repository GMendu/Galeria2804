@model Galeria2804.Models.Imagem

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Imagem</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Imagem Armazenada
        </dt>
        <dd class = "col-sm-10">
            <img src="~/imgs/@Model.arquivoName" width="100%"><br />
        </dd>
        <dt class = "col-sm-2">
            Tamanho do arquivo
        </dt>
        <dd class = "col-sm-10">
            @{
                int tamanho = (int)(Model.arquivoTam / 1000);
                string exibir = tamanho.ToString() + "kB";
            }
            @exibir
        </dd>
        <dt class = "col-sm-2">
            Extensão do arquivo (formato do arquivo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.arquivoType)
        </dd>
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.arquivoDescricao)
        </dd>
    </dl>
    

    <form asp-action="Delete">
        <input type="hidden" asp-for="arquivoId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
