@model Galeria2804.Models.Imagem

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Imagem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="arquivoId" />
            <input type="hidden" asp-for="arquivoTam" />
            <input type="hidden" asp-for="arquivoType" />
            <input type="hidden" asp-for="arquivoName" />
            <div>
                <span>Imagem armazenada</span>
                <img src="~/arq/@Model.arquivoName" width="100%"/><br />
                <input type="file" name="arquivo" class="form-control" value="~/arq/@Model.arquivoName" />
            </div>
            <div class="form-group">
                <input asp-for="arquivoDescricao" class="form-control" />
                <span asp-validation-for="arquivoDescricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
