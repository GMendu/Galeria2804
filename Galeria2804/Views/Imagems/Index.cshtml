@model IEnumerable<Galeria2804.Models.Imagem>

@{
	ViewData["Title"] = "Index";
}

<h1>GERENCIAR ARQUIVOS</h1>

<p>
	<a asp-action="Create">Inserir Imagem</a>
</p>

<div>
	<div class="card-wrapper">
		@foreach (var item in Model)
		{
			<div class="card">
				<div class="card-fundo">
					@switch (item.arquivoType)
					{
						case ".mp4":

							<video class="card-media" controls>
								<source src="~/arq/@item.arquivoName" type="video/mp4">
								Your browser does not support the video tag.
							</video>
							break;

						case ".webm":

							<video class="card-media" controls>
								<source src="~/arq/@item.arquivoName" type="video/webm">
								Your browser does not support the video tag.
							</video>
							break;

						case ".ogg":
							<video class="card-media" controls>
								<source src="~/arq/@item.arquivoName" type="video/ogg">
								Your browser does not support the video tag.
							</video>
							break;

						case ".mp3":

							<audio controls>
								<source src="~/arq/@item.arquivoName" type="audio/mpeg">
								Your browser does not support the audio element.
							</audio>
							break;

						case ".wav":

							<audio controls>
								<source src="~/arq/@item.arquivoName" type="audio/wav">
								Your browser does not support the audio element.
							</audio>
							break;

						default:
							<img class="card-media" src="~/arq/@item.arquivoName" />
							break;

					}
					@{
						int tamanho = (int)(item.arquivoTam / 1000);
						string exibir = tamanho.ToString() + " kB";
					}

					<span>@Html.DisplayFor(modelItem => item.arquivoDescricao)</span>
					<div class="card-hovered">
						<span>@exibir</span>
						@Html.DisplayFor(modelItem => item.arquivoType)
						<a asp-action="Edit" asp-route-id="@item.arquivoId">Edit</a> |
						<a asp-action="Details" asp-route-id="@item.arquivoId">Details</a> |
						<a asp-action="Delete" asp-route-id="@item.arquivoId">Delete</a>
					</div>
				</div>
			</div>
		}
	</div>
</div>








<table class="table">
	<thead>
		<tr>
			<th>
				Imagem
			</th>
			<th>
				Tamanho da arquivo
			</th>
			<th>
				Tipo do arquivo
			</th>
			<th>
				Descrição do arquivo
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>

					@switch (item.arquivoType)
					{
						case ".mp4":

							<video width="320" height="240" controls>
								<source src="~/arq/@item.arquivoName" type="video/mp4">
								Your browser does not support the video tag.
							</video>
							break;

						case ".webm":

							<video width="320" height="240" controls>
								<source src="~/arq/@item.arquivoName" type="video/webm">
								Your browser does not support the video tag.
							</video>
							break;

						case ".ogg":
							<video width="320" height="240" controls>
								<source src="~/arq/@item.arquivoName" type="video/ogg">
								Your browser does not support the video tag.
							</video>
							break;

						case ".mp3":

							<audio controls>
								<source src="~/arq/@item.arquivoName" type="audio/mpeg">
								Your browser does not support the audio element.
							</audio>
							break;

						case ".wav":

							<audio controls>
								<source src="~/arq/@item.arquivoName" type="audio/wav">
								Your browser does not support the audio element.
							</audio>
							break;

						default:
							<img src="~/arq/@item.arquivoName" style="width=100px" />
							break;

					}
				</td>
				<td>
					@{
						int tamanho = (int)(item.arquivoTam / 1000);
						string exibir = tamanho.ToString() + " kB";
					}
					@exibir
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.arquivoType)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.arquivoDescricao)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.arquivoId">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.arquivoId">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.arquivoId">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
